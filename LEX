%{
#include <stdio.h>
%}

%%

/* ---- PREPROCESSOR DIRECTIVE ---- */
\#[^\n]*       
        { printf("Preprocessor directive          :%s\n", yytext); }

/* ---- KEYWORDS ---- */
(int|float|char|double|if|else|while|for|do|switch|case|return)
        { printf("Keyword                 :%s\n", yytext); }

/* ---- IDENTIFIER ---- */
[A-Za-z_][A-Za-z0-9_]* 
        { printf("Identifier              :%s\n", yytext); }

/* ---- NUMBER (int or float) ---- */
[0-9]+(\.[0-9]+)?      
        { printf("Number                  :%s\n", yytext); }

/* ---- STRING LITERAL ---- */
\"([^\\"]|\\.)*\"     
        { printf("String Literal          :%s\n", yytext); }

/* ---- OPERATORS ---- */
(\+\+|--|==|!=|<=|>=|&&|\|\||\+=|-=|\*=|/=) 
        { printf("Operator                :%s\n", yytext); }

[+\-*/%=!<>]           
        { printf("Operator                :%s\n", yytext); }

/* ---- SEPARATORS ---- */
[(){}[\],;]             
        { printf("Separator               :%s\n", yytext); }

/* ---- COMMENTS (ignored) ---- */
"//".*                  { }
"/*"([^*]|\*+[^/])*\*+"/" { }

/* ---- WHITESPACE (ignored) ---- */
[ \t\n]+                { }

/* ---- ANY OTHER CHARACTER ---- */
.                       { printf("Invalid Token           :%s\n", yytext); }

%%

int yywrap() { return 0; }

int main() {
    yylex();
    return 0;
}
