%{
#include "calc.tab.h"   // Generated by Bison
%}

DIGIT   [0-9]+

%%

{DIGIT}    { yylval = atoi(yytext); return NUMBER; }

[+\-*/()]  { return yytext[0]; }   // return character tokens directly

[ \t\n]    { /* skip whitespace */ }

.          { printf("Invalid character: %s\n", yytext); }

%%

int yywrap() { return 1; }



%{
#include <stdio.h>
#include <stdlib.h>
%}

%token NUMBER

%%

input:
      /* empty */
    | input line
    ;

line:
      expr '\n'   { printf("= %d\n", $1); }
    | '\n'
    ;

expr:
      expr '+' expr   { $$ = $1 + $3; }
    | expr '-' expr   { $$ = $1 - $3; }
    | expr '*' expr   { $$ = $1 * $3; }
    | expr '/' expr   { 
                          if ($3 == 0) {
                              printf("Error: Divide by zero!\n");
                              $$ = 0;
                          } else {
                              $$ = $1 / $3;
                          }
                       }
    | '(' expr ')'     { $$ = $2; }
    | NUMBER           { $$ = $1; }
    ;

%%

int yyerror(char *s) {
    printf("Syntax Error!\n");
    return 0;
}

int main() {
    printf("Mini Calculator (Ctrl+C to exit)\n");
    yyparse();
    return 0;
}




bison -d calc.y

flex calc.l

gcc calc.tab.c lex.yy.c -o calc

./calc
